{
  "name": "ucaro-dev-tools",
  "version": "1.0.0",
  "description": "UCARO Dev Tools",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "rimraf dist && npx tsc && npm run copy-assets",
    "run": "node dist/index.js",
    "copy-assets": "copyfiles -u 1 src/assets/**/* dist && copyfiles .env dist",
    "setup": "npm i && npm run build && npm link",
    "link": "npm link",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "bin": {
    "api-generate": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Minhquanzz1002/ucaro-dev-tools.git"
  },
  "keywords": [],
