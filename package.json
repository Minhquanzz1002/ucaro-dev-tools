  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Minhquanzz1002/ucaro-dev-tools/issues"
  },
  "homepage": "https://github.com/Minhquanzz1002/ucaro-dev-tools#readme",
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "copyfiles": "^2.4.1",
    "dotenv": "^17.2.1",
    "fs-extra": "^11.3.1",
    "inquirer": "^12.9.1"
  }
}
